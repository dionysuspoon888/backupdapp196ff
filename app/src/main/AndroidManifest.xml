            android:screenOrientation="portrait" />
        <activity
            android:name=".VoucherActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VoucherDetailActivity"
            android:theme="@style/Theme.AppCompat.Light"
